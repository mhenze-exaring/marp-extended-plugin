{
	"name": "marp-extended-plugin",
	"version": "1.5.0",
	"description": "Plugin for using Marp on Obsidian, with CLI support",
	"main": "dist/obsidian/main.js",
	"bin": {
		"marp-extended": "./dist/cli/index.js"
	},
	"exports": {
		".": "./dist/obsidian/main.js",
		"./cli": "./dist/cli/index.js"
	},
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"build:quick": "node esbuild.config.mjs production",
		"build:cli": "node esbuild.config.mjs production --cli",
		"build:all": "npm run build && npm run build:cli",
		"deploy": "npm run build:quick && cp -r dist/obsidian/. /home/mhenze/obsidian/exaring/.obsidian/plugins/marp-extended/",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"keywords": [
		"obsidian-plugin",
		"obsidian-md",
		"marp",
		"presentation",
		"slides",
		"mermaid",
		"plantuml"
	],
	"author": "JichouP",
	"license": "MIT",
	"devDependencies": {
		"@types/markdown-it": "^14.1.2",
		"@types/mime": "^4.0.0",
		"@types/node": "^22.10.1",
		"@typescript-eslint/eslint-plugin": "8.19.0",
		"@typescript-eslint/parser": "8.19.0",
		"builtin-modules": "4.0.0",
		"esbuild": "0.24.0",
		"obsidian": "latest",
		"prettier": "^3.4.2",
		"tslib": "2.8.1",
		"typescript": "5.7.2",
		"vitest": "^4.0.15"
	},
	"dependencies": {
		"@marp-team/marp-core": "^4.0.1",
		"commander": "^12.1.0",
		"fix-path": "^4.0.0",
		"markdown-it-mark": "^4.0.0",
		"mermaid": "^11.12.2",
		"mime": "^4.0.1"
	}
}
