{
	"name": "obsidian-marp-plugin",
	"version": "1.5.0",
	"description": "Plugin for using Marp on Obsidian",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"build:quick": "node esbuild.config.mjs production",
		"deploy": "npm run build:quick && mkdir -p /home/mhenze/obsidian/exaring/.obsidian/plugins/marp && cp main.js manifest.json /home/mhenze/obsidian/exaring/.obsidian/plugins/marp/",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"keywords": [
		"obsidian-plugin",
		"obsidian-md"
	],
	"author": "JichouP",
	"license": "MIT",
	"devDependencies": {
		"@types/markdown-it": "^14.1.2",
		"@types/mime": "^4.0.0",
		"@types/node": "^22.10.1",
		"@typescript-eslint/eslint-plugin": "8.19.0",
		"@typescript-eslint/parser": "8.19.0",
		"builtin-modules": "4.0.0",
		"esbuild": "0.24.0",
		"obsidian": "latest",
		"prettier": "^3.4.2",
		"tslib": "2.8.1",
		"typescript": "5.7.2",
		"vitest": "^4.0.15"
	},
	"dependencies": {
		"@marp-team/marp-core": "^4.0.1",
		"fix-path": "^4.0.0",
		"mermaid": "^11.12.2",
		"mime": "^4.0.1"
	}
}
